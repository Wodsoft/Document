@model IDocumentContent
@{
    IReadOnlyCollection<IDocumentPage> pages = ViewBag.Pages;
}
<div class="d-flex justify-content-between">
    <div class="p-2">
        @Html.Partial("Page", pages)
    </div>
    <div class="p-2">
        @if (Model == null)
        {
            <h3>很抱歉，当前页面没有内容。</h3>
        }
        else
        {
            <h2>@Model.Title</h2>
            <p>
                <span>@Model.EditDate.ToString("yyyy-MM-dd HH:mm:ss")</span>
            </p>
            <p>
                @Html.Raw(Model.Content)
            </p>
        }
    </div>
    <div class="p-2">Flex item 3</div>
</div>